<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="12pt"
    android:layout_marginEnd="12pt"
    android:orientation="vertical"
    tools:context=".ui.login.LoginActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:gravity="center"
        android:text="!Estamos muy felices!"
        android:textColor="#2196F3"
        android:textColorLink="#3F51B5"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:gravity="center"
        android:text="Necesitamos tus datos para saber que eres real" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt" />

    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:ems="10"
        android:hint="Correo electr칩nico"
        android:inputType="textEmailAddress" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt" />

    <EditText
        android:id="@+id/etDni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:ems="10"
        android:hint="DNI"
        android:inputType="number" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt" />

    <EditText
        android:id="@+id/etApellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:ems="10"
        android:hint="Apellidos"
        android:inputType="text" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:ems="10"
        android:gravity="center|start|right|center_horizontal"
        android:hint="Contrase침a"
        android:inputType="textPassword" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt" />

    <EditText
        android:id="@+id/etPasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:ems="10"
        android:hint="Repetir Contrase침a"
        android:inputType="text" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:gravity="center"
        android:onClick="goToLogin"
        android:text="Iniciar Sesi칩n" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:textAlignment="center"
        android:textColor="#F44336" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:onClick="register"
        android:text="Registrarse" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8pt"
        android:layout_marginEnd="8pt" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8pt"
        android:layout_marginEnd="8pt" />
</LinearLayout>